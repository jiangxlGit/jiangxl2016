<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		
		<!-- JDBC连接配置 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernate?characterEncoding=UTF-8</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		
		<!-- 指定使用MySQL数据库格式的SQL语句(必须) -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		
		<!-- 指定在控制台上是否打印出生成的SQL语句 -->
		<property name="show_sql">true</property>
		
		<!-- 打印出生成的SQL语句进行格式化 
		<property key="format_sql">true</property> 
		-->
		<!-- 指定Hibernate启动时自动创建表结构 -->
		<property name="hbm2ddl.auto">update</property>
		
		<!-- 为每个线程生成一个Session(必须要加，否则会报异常) -->
		<property name="current_session_context_class">thread</property>
		
		<!-- 指定Cat类为Hibernate实体类 -->
		<mapping class="com.jiang.pojo.Student"/>
		
	</session-factory>

</hibernate-configuration>